# Database Configuration
# PostgreSQL runs as a Docker container -- DB_HOST must match the service name in docker-compose
DB_HOST=postgres
DB_PORT=5432
DB_USER=pguser
DB_PASSWORD=root

# AI Services (required)
OPENAI_API_KEY=your_openai_api_key_here

# Speech-to-text (fallback for web voice survey)
DEEPGRAM_API_KEY=your_deepgram_api_key_here
DEEPGRAM_API_TOKEN=your_deepgram_api_token_here

# LiveKit Voice Service (required for phone surveys)
LIVEKIT_URL=wss://your-project.livekit.cloud
LIVEKIT_API_KEY=your_livekit_api_key_here
LIVEKIT_API_SECRET=your_livekit_api_secret_here
SIP_OUTBOUND_TRUNK_ID=your_sip_trunk_id_here

# Email Service
MAILERSEND_API_KEY=your_mailersend_api_key_here
MAILERSEND_SENDER_EMAIL=noreply@yourdomain.com

# Public URL (required for callbacks)
PUBLIC_URL=https://your-public-url.com

# Gateway & UI Microservices
# All traffic goes through the gateway on a single port
GATEWAY_PORT=8080
VITE_SERVER_URL=http://localhost:8080/pg
VITE_RECIPIENT_URL=http://localhost:8080
NEXT_PUBLIC_API_BASE_URL=http://localhost:8080
